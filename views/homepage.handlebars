<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-4">TRIPLY</h1>
    <p class="lead">A post-pandemic travel guide for those who want to escape on a budget!</p>
  </div>
</div>
<div class="container-fluid d-flex flex-wrap justify-content-between w-100">
    {{#each cities as |city|}}
    <div class="container-fluid col-md-4 col-sm-12">
        <a href="/city/{{city.id}}">
        <div class="card bg-dark text-white">
            <img class="card-img img-fluid home-card-img" src="{{city.picture}}" alt="Card image">
                <div class="card-img-overlay">
                    <h5 class="card-title">{{city.name}}</h5>
                </div>
        </div>
        </a>
    </div>
    {{/each}}
</div>