<div class="container d-flex flex-column w-50 flex-wrap w-100">
    <div class="container">
        <div class="card bg-dark text-white">
            <img class="card-img img-fluid" src="{{city.picture}}" alt="Card image">
                <div class="card-img-overlay">
                    <h5 class="card-title">{{city.name}}</h5>
                </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-6 col-sm-12">
        <h2>EATS</h2>
        {{#each eats as |eat|}}
    <div class="card eat-cards h-25 d-flex flex-column align-items-center">
            <img class="card-img-top img-fluid m-1 w-75" src="{{eat.picture}}" alt="Card image cap" style="height: 50%;">
            <div class="card-body text-center d-flex flex-column justify-content-between">
                <h5 class="card-title">{{eat.name}}</h5>
                <p class="card-text">{{eat.summary}}</p>
                <a href="{{eat.link}}" target="_blank">Visit their website</a>
            </div>
    </div>
        {{/each}}
    </div>
    <div class="col-lg-6 col-md-6 col-sm-12">
        <h2>ENTERTAINMENT</h2>
        {{#each ents as |ent|}}
        <div class="card h-25 ent-cards d-flex flex-column align-items-center">
            <img class="card-img-top img-fluid m-1 w-75" src="{{ent.picture}}" alt="Card image cap" style="height: 50%;">
            <div class="card-body text-center d-flex flex-column justify-content-between">
                <h5 class="card-title">{{ent.name}}</h5>
                <p class="card-text">{{ent.summary}}</p>
                <a href="{{ent.link}}" target="_blank">Visit their website</a>
            </div>
    </div>
        {{/each}}
        </div>
        </div>
</div>
</div>